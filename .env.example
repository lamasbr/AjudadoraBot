# =================================
# AjudadoraBot Environment Variables
# =================================

# Environment
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_SECRET_TOKEN=your_webhook_secret_token_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_ISSUER=AjudadoraBot
JWT_AUDIENCE=AjudadoraBot-Users
JWT_EXPIRATION_MINUTES=1440

# Database Configuration
DATABASE_CONNECTION_STRING=Data Source=/app/data/ajudadorabot.db
POSTGRES_DB=ajudadorabot
POSTGRES_USER=ajudadorabot
POSTGRES_PASSWORD=your_postgres_password_here

# Redis Configuration
REDIS_CONNECTION_STRING=localhost:6379
REDIS_PASSWORD=your_redis_password_here

# Mini App Configuration
MINIAPP_ALLOWED_ORIGINS=https://yourdomain.com,https://t.me

# Security Configuration
ENCRYPTION_KEY=your_encryption_key_32_chars_long
HSTS_MAX_AGE=31536000
ENABLE_HTTPS_REDIRECT=true

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_ADDRESS=noreply@ajudadorabot.com
SMTP_FROM_NAME=AjudadoraBot

# External Services
TELEGRAM_API_BASE_URL=https://api.telegram.org
TELEGRAM_FILE_API_BASE_URL=https://api.telegram.org/file

# Storage Configuration
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ajudadorabot-storage

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_TYPE=local

# Rate Limiting
RATE_LIMIT_PERMIT_LIMIT=100
RATE_LIMIT_WINDOW_MINUTES=1
RATE_LIMIT_QUEUE_LIMIT=10

# Performance Settings
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT_SECONDS=30
HTTP_CLIENT_TIMEOUT_SECONDS=30

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=/app/logs/ajudadorabot-.log
LOG_FILE_SIZE_LIMIT=10485760
LOG_FILE_RETENTION_COUNT=10

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL_MINUTES=5

# Health Check Configuration
HEALTH_CHECK_TIMEOUT_SECONDS=30
HEALTH_CHECK_INTERVAL_SECONDS=30
ENABLE_DATABASE_HEALTH_CHECK=true

# Feature Flags
ENABLE_WEB_APP=true
ENABLE_INLINE_QUERIES=true
ENABLE_FILE_UPLOADS=true
ENABLE_USER_ANALYTICS=true
ENABLE_BOT_COMMANDS=true
ENABLE_WEBHOOK_MODE=true
ENABLE_REAL_TIME_NOTIFICATIONS=true

# Development Settings
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=false
ENABLE_SENSITIVE_DATA_LOGGING=false

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_password_here

# Alert Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook
ENABLE_EMAIL_ALERTS=true
ENABLE_SLACK_ALERTS=true