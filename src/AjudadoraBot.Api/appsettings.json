{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=ajudadorabot.db"
  },
  "TelegramBot": {
    "Token": "",
    "WebhookUrl": "",
    "SecretToken": "",
    "Mode": "Polling",
    "MaxRetryAttempts": 3,
    "TimeoutSeconds": 30,
    "PollingIntervalMs": 1000
  },
  "MiniApp": {
    "JwtSecret": "your-super-secret-key-here-change-in-production",
    "JwtIssuer": "AjudadoraBot",
    "JwtAudience": "AjudadoraBot-Users",
    "JwtExpirationMinutes": 1440,
    "AllowedOrigins": [
      "https://your-domain.com",
      "https://t.me"
    ]
  },
  "Analytics": {
    "Enabled": true,
    "RetentionDays": 90,
    "BatchSize": 100,
    "FlushIntervalMinutes": 5
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "AjudadoraBot": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Swagger": {
    "Title": "AjudadoraBot API",
    "Version": "v1",
    "Description": "REST API for managing a Telegram bot with SQLite database",
    "ContactName": "API Support",
    "ContactEmail": "support@example.com"
  },
  "RateLimiting": {
    "Enabled": true,
    "PermitLimit": 100,
    "WindowMinutes": 1,
    "QueueLimit": 10
  },
  "BackgroundServices": {
    "SessionCleanupIntervalMinutes": 60,
    "AnalyticsFlushIntervalMinutes": 5,
    "ErrorLogCleanupIntervalHours": 24
  }
}