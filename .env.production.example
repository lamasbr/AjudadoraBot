# =================================
# AjudadoraBot Production Environment
# =================================

# Environment
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=
WEBHOOK_URL=https://ajudadorabot.com/webhook
WEBHOOK_SECRET_TOKEN=

# JWT Configuration
JWT_SECRET=
JWT_ISSUER=AjudadoraBot
JWT_AUDIENCE=AjudadoraBot-Users
JWT_EXPIRATION_MINUTES=1440

# Database Configuration
DATABASE_CONNECTION_STRING=Data Source=/app/data/ajudadorabot.db
POSTGRES_DB=ajudadorabot
POSTGRES_USER=ajudadorabot
POSTGRES_PASSWORD=

# Redis Configuration
REDIS_CONNECTION_STRING=ajudadorabot-redis:6379
REDIS_PASSWORD=

# Mini App Configuration
MINIAPP_ALLOWED_ORIGINS=https://ajudadorabot.com,https://www.ajudadorabot.com,https://t.me

# Security Configuration
ENCRYPTION_KEY=
HSTS_MAX_AGE=31536000
ENABLE_HTTPS_REDIRECT=true

# Monitoring Configuration  
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_ADDRESS=noreply@ajudadorabot.com
SMTP_FROM_NAME=AjudadoraBot

# Storage Configuration
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=ajudadorabot-production

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2,14 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_STORAGE_TYPE=s3

# Rate Limiting
RATE_LIMIT_PERMIT_LIMIT=100
RATE_LIMIT_WINDOW_MINUTES=1
RATE_LIMIT_QUEUE_LIMIT=10

# Performance Settings
MAX_CONCURRENT_REQUESTS=2000
REQUEST_TIMEOUT_SECONDS=30
HTTP_CLIENT_TIMEOUT_SECONDS=30

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=/app/logs/ajudadorabot-.log
LOG_FILE_SIZE_LIMIT=10485760
LOG_FILE_RETENTION_COUNT=30

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL_MINUTES=2

# Health Check Configuration
HEALTH_CHECK_TIMEOUT_SECONDS=30
HEALTH_CHECK_INTERVAL_SECONDS=30
ENABLE_DATABASE_HEALTH_CHECK=true

# Feature Flags
ENABLE_WEB_APP=true
ENABLE_INLINE_QUERIES=true
ENABLE_FILE_UPLOADS=true
ENABLE_USER_ANALYTICS=true
ENABLE_BOT_COMMANDS=true
ENABLE_WEBHOOK_MODE=true
ENABLE_REAL_TIME_NOTIFICATIONS=true

# Development Settings
ENABLE_SWAGGER=false
ENABLE_DETAILED_ERRORS=false
ENABLE_SENSITIVE_DATA_LOGGING=false

# Alert Configuration
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
ENABLE_EMAIL_ALERTS=true
ENABLE_SLACK_ALERTS=true